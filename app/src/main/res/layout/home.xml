<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/list_bg_color"
    android:layout_height="match_parent">
    <include layout="@layout/title"></include>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:textSize="25dp"
            android:text="Hello,欢迎使用朴食智能取餐柜"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout

            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
               android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/vending"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/white"
                    android:layout_width="200dp"
                    android:layout_height="250dp">
                    <Button
                        android:id="@+id/vending_bt"
                        android:layout_gravity="center"
                        android:background="@drawable/icon1"
                        android:layout_width="100dp"
                        android:layout_height="100dp">
                    </Button>
                    <TextView
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:text="@string/vending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/take_fool"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/white"
                    android:layout_width="200dp"
                    android:layout_height="250dp">
                    <Button
                        android:id="@+id/take_fool_bt"
                        android:layout_gravity="center"
                        android:background="@drawable/icon2"
                        android:layout_width="100dp"
                        android:layout_height="100dp">
                    </Button>
                    <TextView
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:text="@string/Take_meal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Save_meal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/white"
                    android:layout_width="200dp"
                    android:layout_height="250dp">
                    <Button
                        android:id="@+id/Save_meal_bt"
                        android:layout_gravity="center"
                        android:background="@drawable/icon3"
                        android:layout_width="100dp"
                        android:layout_height="100dp">
                    </Button>
                    <TextView
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:text="@string/Save_meal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="40dp"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/home_bottom_title"></include>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>